<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_news"
    android:orientation="vertical"
    tools:context="com.lestariinterna.newsapp.NewsActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">
        <LinearLayout
            android:id="@+id/linearLayoutToolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageViewLens"
                android:layout_width="25dp"
                android:layout_height="36dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/search_icon" />

            <EditText

                android:id="@+id/editTextSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:ems="20"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:hint=" Search"
                android:inputType="text" />

            <!--<Button-->
            <!--android:text="Ok"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignBottom="@+id/SearchByInputET"-->
            <!--android:layout_toLeftOf="@+id/SearchByInputET"-->
            <!--android:id="@+id/okButton"-->
            <!--android:gravity="center"-->
            <!--android:layout_gravity="center_horizontal"/>-->

        </LinearLayout>
        </android.support.v7.widget.Toolbar>


    <ListView
        android:id="@+id/ListViewID"
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


        <!-- Empty text view when there is no item-->
        <TextView
            android:id="@+id/textViewEmpty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
        <ProgressBar
            android:id="@+id/proggres_Indicator"
            style="@style/Widget.AppCompat.ProgressBar"
            android:layout_centerInParent="true"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />




</RelativeLayout>
