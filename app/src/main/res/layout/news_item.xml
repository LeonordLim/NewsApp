<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ImageViewNews"
        android:layout_width="125dp"
        android:layout_height="100dp"
        android:layout_marginLeft="5dp"
        android:paddingBottom="5dp"
        android:scaleType="centerCrop"
        android:paddingTop="5dp"
        android:paddingLeft="10dp"
        android:src="@mipmap/ic_launcher"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewHeadline"
            style="@style/HeadlineText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            tools:text="The Resurgence of Manchester United in 1990 " />

        <TextView
            android:id="@+id/textViewSection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewDate"
            style="@style/NewsProfile"
            tools:text="Football " />

        <TextView
            android:id="@+id/textViewAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewSection"
            style="@style/NewsProfile"
            tools:text="Marco veratti" />
        <TextView
            android:id="@+id/textViewDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/NewsProfile"
            tools:text="24 oktober 20011"
            android:layout_below="@+id/textViewHeadline"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>
</LinearLayout>